<?xml version="1.0"?>
<launch>

  <!-- For setting debug level to debug 
  <env name="ROSCONSOLE_CONFIG_FILE" 
       value="$(find kingfisher_utils)/config/custom_rosconsole.conf"/>
  -->

<!-- Joystick Driver -->
<node pkg="joy" type="joy_node" name="joy">
  <param name="dev" value="/dev/input/js0"/>
  <!--<param name="autorepeat_rate" type="double" value="10.0" />  -->
  <param name="autorepeat_rate" value="10"/>
</node>

<!-- Joystick Teleop -->
<rosparam file="$(find kingfisher_utils)/config/kingfisher_tank.yaml"
	  command="load"/>	
<node pkg="joy_teleop" type="joy_teleop.py" name="joy_teleop">
  <remap from="cmd_vel" to="cmd_vel" />
</node>

<!-- Convert Twist messages to Drive messages -->
<node pkg="kingfisher_utils" type="twist2drive_tank.py" name="twist2drive_tank" output="screen" />

</launch>